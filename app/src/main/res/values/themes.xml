<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PubMania" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/bahiama</item>
        <item name="fontFamily">@font/bahiama</item>
        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">8dp</item>

</style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/gialloScuro</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/pro</item>
    </style>
    <style name="pro">
        <item name="cornerSizeBottomLeft">11dp</item>
        <item name="background">@color/black</item>
        <item name="cornerSizeTopLeft">11dp</item>

    </style>

    <style name="spinnerPaese">
        <item name="font">@font/bahiama</item>

    </style>
<style name="spi">
    <item name="android:textSize">8dp</item>
</style>
    <style name="styleSpinner">
        <item name="fontFamily">@font/bahiama</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/back_crea_prodotto</item>
        <item name="dialogCornerRadius">19dp</item>
    </style>
    <style name="MyDialogThemeeee" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="dialogCornerRadius">19dp</item>

    </style>

    <style name="MyDialogThemedee" parent="Theme.AppCompat.Light.Dialog.Alert">
